.container-item {
  padding: 15px;
  border-bottom: 1px solid #d8d8d8;
}

.item-label {
  height: 30px;
  line-height:30px;
  font-size: 10pt; 
  float: left;
}

.item-avatar {
  width: 30px;
  height: 30px;
  border-radius: 50%;
  float: right;
}

.item-input {
  background: white;
  height: 30px;
  line-height: 30px;
  font-size: 10pt;
  text-align: right;
  float: right;
}

#item-team-master {
  background: null;
}

.time-container {
  float: right;
  text-align: center;
}

.input-time {
  width: 100px;
  text-align: center;
}

.default-btn {
  background-color: #1296db;
  color:white;
  width:80%;
  height:30px;
  font-size: 10pt;
  margin: 20px auto;
}